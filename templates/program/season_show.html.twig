{% extends 'base.html.twig' %}

{% block title %}Saison n° {{season.number}} {{program.title}}{% endblock %}

{% block body %}
<h2>Episodes de la série {{program.title}} saison {{season.number}} {{season.year}}</h2>
<p>{{season.description}}</p>
{% for episode in season.episodes %}
    <p>Episode {{episode.number}} : {{episode.title}}</p>
    <p>{{episode.synopsis}}</p>
    <a href="{{ path("program_episode_show", { "programId": program.id, "seasonId":season.id, "episodeId":episode.id } ) }}">Ceci est un bouton vers la vue de l'épisode susnommé</a>
{% endfor %}
        <a href="{{ path("program_show", { id: program.id }) }}">
        Retour à la liste des saisons
        </a>
{% endblock %}